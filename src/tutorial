/**
 * WE NEED TO CREATE ONE FILE FOR ALL THE GUIs SO THAT IS WHY THIS CANNOT BE RUN
 */


import java.awt.*;
import java.awt.event.*;

import javax.swing.*;

public class Tutorial implements ActionListener {
    JFrame frame;
    JPanel screen;
    JLabel title, info, back;


    public static void main(String[] args) {
        new Tutorial();
    }

    Tutorial(){
        frame = new JFrame();
        screen = new JPanel();
        frame.setSize(1024, 768);
        frame.setVisible(true);
        frame.setTitle("BallPickle / Help");
        frame.setLocationRelativeTo(null);
        frame.setResizable(false);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        screen.setLayout(new BoxLayout(screen, BoxLayout.Y_AXIS));

        title = new JLabel("Help");
        title.setAlignmentX(Component.CENTER_ALIGNMENT);
        title.setFont(new Font("Arial", Font.BOLD, 30));
       
        info = new JLabel("Controls");
        info.setAlignmentX(Component.CENTER_ALIGNMENT); 
        info.setFont(new Font("Arial", Font.PLAIN, 20));
       
        back = new JLabel("Help");
        back.setAlignmentX(Component.LEFT_ALIGNMENT); 
        back.setFont(new Font("Arial", Font.PLAIN, 20));

    }

    @Override
    public void actionPerformed(ActionEvent e) {
        // TODO Auto-generated method stub
        throw new UnsupportedOperationException("Unimplemented method 'actionPerformed'");
    }
    
}